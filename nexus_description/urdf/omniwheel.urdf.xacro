<?xml version="1.0"?>

<robot name="omni_wheel" xmlns:xacro="omni_uvbot">
  <xacro:macro name="barrel" params="prefix parent dir">
    <joint name="${prefix}_joint" type="continuous"><!-- continuous -->
      <parent link="${parent}"/>
      <child link="${prefix}_link"/>
      <origin rpy="${pi/2} 0 ${dir}" xyz="${0.0405*cos(dir)} ${0.0405*sin(dir)} 0.006"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0.001"/>
    </joint>
    <transmission name="${prefix}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
    <link name="${prefix}_link">
      <visual>
        <geometry>
          <!-- <mesh filename="package://mind_description/mesh/omni_barrel.stl"/> -->
          <cylinder radius="0.0095" length="0.019"/>
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <!-- <mesh filename="package://mind_description/mesh/omni_barrel.stl"/> -->
          <cylinder radius="0.0095" length="0.019"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.002"/>
        <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
      </inertial>  
    </link>
    <gazebo reference="${prefix}_link">
      <mu1 value="2.5" />
      <mu2 value="2.5" />
      <kp value="5000" />
      <kd value="10" />
      <material>Gazebo/Black</material>
    </gazebo>

    <!-- <joint name="${prefix}_mark_joint" type="fixed">
      <parent link="${prefix}_link"/>
      <child link="${prefix}_mark_link"/>
      <origin rpy="0 0 0" xyz="0.005 0 0"/>
    </joint>
    <link name="${prefix}_mark_link">
      <visual>
        <geometry>
          <box size="0.005 0.005 0.005"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>
    <gazebo reference="${prefix}_mark_link">
      <material>Gazebo/White</material>
    </gazebo> -->
  </xacro:macro>

  <xacro:macro name="motor" params="prefix parent">
    <joint name="${prefix}_joint" type="fixed">
      <parent link="${parent}"/>
      <child  link="${prefix}_body_link"/>
    </joint>

    <link name="${prefix}_body_link">
      <visual>
        <material name="black"/>
        <origin rpy="0 ${radians(90)} 0" xyz="-0.030 0 0"/>
        <geometry> 
          <cylinder radius="0.015" length="0.085" />
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 ${radians(90)} 0" xyz="-0.055 0 0"/>
        <geometry>
          <cylinder radius="0.012" length="0.03" />
        </geometry>
      </collision>
      <inertial>
        <mass value="0.150"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>  
    </link>

    <gazebo reference="${prefix}_body_link">
      <material>Gazebo/Gray</material>
    </gazebo>

    <joint name="${prefix}_shaft_joint" type="continuous">
      <parent link="${prefix}_body_link"/>
      <child  link="${prefix}_shaft_link"/>
      <origin rpy="0 0 0" xyz="0.012 0 0"/>
      <axis xyz="1 0 0"/>
      <limit velocity="40.0" effort="3.0" />
      <dynamics damping="0.01" friction="0.0"/>
    </joint>
    <transmission name="${prefix}_shaft_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_shaft_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_shaft_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <link name="${prefix}_shaft_link">
      <visual>
        <geometry>
          <mesh filename="package://mind_description/mesh/ga25_shaft.stl" />
        </geometry>
        <material name="silver"/>
      </visual>
      <inertial>
        <mass value="0.010"/>
        <inertia ixx="0.0000005" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
      </inertial>  
    </link>
    <gazebo reference="${prefix}_shaft_link">
      <material>Gazebo/Gray</material>
    </gazebo>
  </xacro:macro>

  <xacro:macro name="omni_wheel_set" params="prefix parent">
    <joint name="${prefix}_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}_base_link"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint>
    <link name="${prefix}_base_link" >
      <inertial>
        <mass value="0.010"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial> 
    </link>
 
    <xacro:motor prefix="${prefix}_motor" parent="${prefix}_base_link" />

    <joint name="${prefix}_housind_joint" type="fixed">
      <parent link="${prefix}_motor_shaft_link"/>
      <child  link="${prefix}_housing_link"/>
      <origin xyz="0.012 0 0" rpy="0 ${radians(90)} 0"/>
    </joint>

    <link name="${prefix}_housing_link">
      <visual>
        <geometry>
          <!-- <mesh filename="package://mind_description/mesh/omni_housing.stl" scale="3.15 3.15 1.5"/> -->
          <cylinder radius="0.0495" length="0.020"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <material name="grey"/>
      </visual>
      <inertial>
        <mass value="0.025"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>  
    </link>
    <gazebo reference="${prefix}_housing_link">
      <material>Gazebo/Gray</material>
    </gazebo>

    <joint name="${prefix}_housing_s_joint" type="fixed">
      <parent link="${prefix}_housing_link"/>
      <child link="${prefix}_housing_s_link"/>
      <origin rpy="0 ${pi} ${pi/4.5}" xyz="0 0 0"/>
    </joint>
    <link name="${prefix}_housing_s_link">
      <inertial>
        <mass value="0.025"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>  
    </link>

    <xacro:barrel prefix="${prefix}_barrel_1" parent="${prefix}_housing_link" dir="0"/>
    <xacro:barrel prefix="${prefix}_barrel_2" parent="${prefix}_housing_link" dir="${pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_3" parent="${prefix}_housing_link" dir="${2*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_4" parent="${prefix}_housing_link" dir="${3*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_5" parent="${prefix}_housing_link" dir="${4*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_6" parent="${prefix}_housing_link" dir="${5*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_7" parent="${prefix}_housing_link" dir="${6*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_8" parent="${prefix}_housing_link" dir="${7*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_9" parent="${prefix}_housing_link" dir="${8*pi/4.5}"/>

    <xacro:barrel prefix="${prefix}_barrel_10" parent="${prefix}_housing_s_link" dir="0"/>
    <xacro:barrel prefix="${prefix}_barrel_11" parent="${prefix}_housing_s_link" dir="${pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_12" parent="${prefix}_housing_s_link" dir="${2*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_13" parent="${prefix}_housing_s_link" dir="${3*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_14" parent="${prefix}_housing_s_link" dir="${4*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_15" parent="${prefix}_housing_s_link" dir="${5*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_16" parent="${prefix}_housing_s_link" dir="${6*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_17" parent="${prefix}_housing_s_link" dir="${7*pi/4.5}"/>
    <xacro:barrel prefix="${prefix}_barrel_18" parent="${prefix}_housing_s_link" dir="${8*pi/4.5}"/>
  </xacro:macro>
</robot>
